<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="4dp"
                                    app:cardCornerRadius="3dp"
                                    app:cardElevation="3dp"
>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/selector_item_clickable"
        android:padding="12dp"
    >

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="top|start"
            android:lineSpacingExtra="2dp"
            android:maxLines="2"
            android:paddingBottom="6dp"
            android:textColor="@color/item_title_tv"
            android:textSize="@dimen/item_title_tv"
        />

        <TextView
            android:id="@+id/tv_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_title"
            android:layout_marginTop="9dp"
            android:paddingEnd="4dp"
            android:paddingLeft="0dp"
            android:paddingRight="4dp"
            android:textColor="@color/common_item_via"
            android:textSize="@dimen/item_via_tv"
            android:textStyle="italic"
            android:typeface="serif"
        />

        <LinearLayout
            android:id="@+id/ll_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_author"
            android:layout_marginTop="12dp"
            android:orientation="horizontal"
        >

            <TextView
                android:id="@+id/tv_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/bg_data_tag"
                android:gravity="center"
                android:text="匠心写作"
                android:textColor="@color/item_tag_tv"
                android:textSize="@dimen/item_tag_tv"
            />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/ll_tag"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:text="222"
            android:textColor="@color/item_date"
            android:textSize="@dimen/item_date_tv"
        />

    </RelativeLayout>

</android.support.v7.widget.CardView>